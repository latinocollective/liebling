{{!--
This navigation template is shared across all the pages.
Also it includes the big submenu.
--}}

{{#if isSecondary}}
  <ul class="m-secondary-menu">
    {{#foreach navigation}}
      <a href="{{url}}" target="_blank" rel="noopener" aria-label="{{slug}}">
        <span class="icon-{{slug}}" aria-hidden="true"></span>
      </a>
    {{/foreach}}
  </ul>
{{else}}
  {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}">
      <a href="{{url absolute="true"}}">{{label}}</a>
    </li>
  {{/foreach}}
{{/if}}
